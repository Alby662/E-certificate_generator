// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String    @map("password_hash")
  createdAt    DateTime  @default(now()) @map("created_at")
  
  projects     Project[]
  
  @@map("users")
}

model Project {
  id                Int       @id @default(autoincrement())
  userId            Int       @map("user_id")
  name              String
  templatePath      String    @map("template_path")
  fields            String?   // JSON string storing field configuration
  createdAt         DateTime  @default(now()) @map("created_at")
  
  // PHASE 3: Preview Approval Tracking
  previewApproved   Boolean   @default(false) @map("preview_approved")
  previewApprovedAt DateTime? @map("preview_approved_at")
  lastFieldUpdateAt DateTime  @default(now()) @map("last_field_update_at")
  
  // PHASE 4: Email Tracking
  emailStatus       String    @default("not_started") @map("email_status") // 'not_started', 'in_progress', 'completed', 'failed'
  emailSentCount    Int       @default(0) @map("email_sent_count")
  emailFailedCount  Int       @default(0) @map("email_failed_count")
  emailStartedAt    DateTime? @map("email_started_at")
  emailCompletedAt  DateTime? @map("email_completed_at")

  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  participants      Participant[]
  
  @@unique([userId, name]) // Prevent duplicate project names for the same user
  @@map("projects")
}

model Participant {
  id            Int       @id @default(autoincrement())
  projectId     Int       @map("project_id")
  name          String
  email         String
  certificateId String    @unique @map("certificate_id")
  customData    String?   @map("custom_data") // JSON string for extra Excel columns
  createdAt     DateTime  @default(now()) @map("created_at")
  
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  certificate   Certificate?  // One-to-one relationship (optional until generated)
  emailLogs     EmailLog[]
  
  @@index([projectId])
  @@map("participants")
}

model Certificate {
  id             Int       @id @default(autoincrement())
  participantId  Int       @unique @map("participant_id")  // ðŸ”’ One certificate per participant
  filePath       String    @map("file_path")
  generatedAt    DateTime  @default(now()) @map("generated_at")
  
  participant    Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  
  @@map("certificates")
}

model EmailLog {
  id             Int       @id @default(autoincrement())
  participantId  Int       @map("participant_id")
  status         String    // 'pending', 'sent', 'failed', 'bounced'
  errorMessage   String?   @map("error_message")
  errorCategory  String?   @map("error_category") // 'configuration' | 'recipient' | 'attachment' | 'rate_limit' | 'network' | 'unknown'
  attempts       Int       @default(1) // Track retry count
  sentAt         DateTime? @map("sent_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  
  participant    Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  
  @@index([participantId])
  @@map("email_logs")
}
